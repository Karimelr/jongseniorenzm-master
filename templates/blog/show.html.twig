{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <h1>Blog</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blog.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ blog.title }}</td>
            </tr>
            <tr>
                <th>Body</th>
                <td>{{ blog.body|raw }}</td>
            </tr>
            <tr>
                <th>Frontpage</th>
                <td>{{ blog.frontpage }}</td>
            </tr>
            <tr>
                <th>Calender</th>
                <td>{{ blog.calender }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td><img src="{{ vich_uploader_asset(blog, 'imageFile') }}" alt="{{ blog.imageName }}" height="150"></td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ blog.updatedAt ? blog.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('blog_index') }}">back to list</a>

    <a href="{{ path('blog_edit', {'id': blog.id}) }}">edit</a>

    {{ include('blog/_delete_form.html.twig') }}
{% endblock %}
